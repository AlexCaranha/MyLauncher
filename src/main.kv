<ContentNavigationDrawer>:
    ScrollView:
        id: scroll_view

Screen:
    name: "main_screen"

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            id: toolbar
            pos_hint: {"top": 1}
            elevation: 10
            title: "MyLauncher"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
            MDSwitch:
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_active: app.change_title_visibility(self.active)            

        MDNavigationLayout:
            id: navigation_layout

            ScreenManager:
                id: screen_manager

            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer
