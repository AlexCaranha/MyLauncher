<ContentNavigationDrawer>:
    ScrollView:
        id: scroll_view

Screen:
    name: "main_screen"

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "MDNavigationDrawer"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        MDSwitch:
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_active: app.change_title_visibility(self.active)            

    MDNavigationLayout:
        id: navigation_layout
        x: toolbar.height

        ScreenManager:
            id: screen_manager            

            Screen:
                name: "scr 1"

                MDLabel:
                    text: "Search"
                    halign: "center"

            Screen:
                name: "scr 2"

                MDLabel:
                    text: "Configuration"
                    halign: "center"

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer